@model ShowApp.Models.Show

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Show</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ShowTitle" class="control-label"></label>
                <input asp-for="ShowTitle" class="form-control" />
                <span asp-validation-for="ShowTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShowGenre" class="control-label"></label>
                <input asp-for="ShowGenre" class="form-control" />
                <span asp-validation-for="ShowGenre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Current Image</label>
                <img src="@Model.ImagePath" alt="@Model.ShowTitle" />
            </div>
            <div class="form-group">
                <label>New Image</label>
                <input type="file" name="image" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
